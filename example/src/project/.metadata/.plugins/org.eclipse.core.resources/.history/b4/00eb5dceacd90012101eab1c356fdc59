		Warrior(){
			name = "Warrior";}
		
		//constructors
		Warrior(String n){
			name = n;
		}
		
		//Setters
		public void setHealth(int h){
			int health = h;
			
		}
		
		//Getters
		public int getHealth(){
			return health;
		}		
		
		//Methods
		public void healthChange(int h){
			health = health - h;
		
		}
